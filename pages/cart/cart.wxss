.container {
	height: 100%;
	overflow: hidden;
}
.carts-item{
    width: 100%;
}
.carts-wrap{
    width: 100%;
    background: #fff;
}
.carttitle{
    border-bottom: 1px solid #eee;
    font-size: 30rpx;
    padding: 20rpx;
    background: #fff;
    width: 100%;
    box-sizing: border-box;
}
.cartitem{
    position: relative;
    display: flex;
    align-items: center;
    border-bottom: 1px solid #f5f5f5;
    margin-left: 20rpx;
}
.cart-shop{
    width: 200rpx;
    height: 200rpx;
}
.pro-title{
    font-size: 30rpx;
}
.pro-btn{
    position: absolute;
    right: 20rpx;
    width: 150rpx;
    bottom: 20rpx;
}
.pro-btn image{
    width: 50rpx;
    height: 50rpx;
    vertical-align: top;
}
.pro-btn .input{
    width: 50rpx;
    height: 50rpx;
    line-height: 50rpx;
    display: inline-block;
    text-align: center;
    font-size: 26rpx;
    vertical-align: top;
    color: #999;
}
.price{
    color: #ff5000;
    font-size: 30rpx;
    margin: 16rpx 0;
}
.original{
    font-size: 24rpx;
    color: #aaa;
    text-decoration: line-through;
}



.settle {
	display: -webkit-flex;
	position: absolute;
	left: 0;
	bottom: 0;
	width: 100%;
	height: 100rpx;
	background: #474749;
    line-height: 100rpx;
    color: #fff;
    font-size: 30rpx;
    padding-left: 20rpx;
    box-sizing: border-box;
}
.ctrls text{
    display: inline-block;
    vertical-align: top;
}
.settle-btn{
    position: absolute;
    height: 100rpx;
    width: 200rpx;
    background: #38ca73;
    right: 0;
    text-align: center;
    font-size: 36rpx;
}
.count{
    margin-left: 20rpx;
    padding-left: 20rpx;
    border-left: 1px solid #515152;
}
.settle icon{
    vertical-align: middle;
    margin-top: 18rpx;
    margin-right: 10rpx;
}