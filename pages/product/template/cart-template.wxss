.cart-detail, .cart-detail .mask {
	position: absolute;
	left: 0;
	top: 0;
	width: 100%;
	height: 100%;
}
.cart-detail .mask {
	background: rgba(0,0,0,0.7);
}
.cart-detail .list {
	position: absolute;
	left: 0;
	bottom: 100rpx;
	width: 100%;
	background: #f7f7f7;
}
.cart-detail .list .item {
	display: -webkit-flex;
	color: #333;
	font-size: 36rpx;
	line-height: 108rpx;
	padding: 0 16rpx;
	border-bottom: 1px solid #ddd;
}
.cart-detail .list .item .name {
	-webkit-flex: 1;
	font-size: 30rpx;
}
.cart-detail .list .item .total {
	width: 120rpx;
	font-size: 24rpx;
	color: #ff5000;
}
.cart-detail .list .item .total text{
	font-size: 36rpx;
}
.cart-detail .list .item .reduce,
.cart-detail .list .item .add {
	width: 40rpx;
	height: 40rpx;
	text-align: center;
	margin: 34rpx 0;
}
.cart-detail .list .item .num {
	width: 50rpx;
	text-align: center;
	margin: 0 5rpx;
	color: #8a8a8a;
}

.cart {
	display: -webkit-flex;
	position: absolute;
	left: 0;
	bottom: 0;
	width: 100%;
	height: 100rpx;
	background: #474749;
}
.cart .data {
	-webkit-flex: 1;
	/*border-top: 1rpx solid #e7e7e7;*/
}
.cart .data .icon{
	position: absolute;
	left: 40rpx;
	top: -20rpx;
	width: 100rpx;
	height: 100rpx;
	background: #3090e8;
	border-radius: 50%;
	border: 10rpx solid #474749;

}
.cart .data .icon.disabled {
	background: #3d3d3d;
}
.cart .data .icon image {
	position: absolute;
	left: 20rpx;
	top: 20rpx;
	width: 60rpx;
	height: 60rpx;
}
.cart .data .icon .count {
	position: absolute;
	left: 70rpx;
	top: -18rpx;
	font-size: 24rpx;
	line-height: 40rpx;
	padding: 0 20rpx;
	color: #fff;
	background: #ff5000;
	border-radius: 20rpx;
	transform: scale(0.6);
}
.cart .data .total {
	color: #fff;
	font-size: 36rpx;
	line-height: 100rpx;
	padding-left: 160rpx;	
}
.cart button {
	width: 200rpx;
	height: 100%;
	font-size: 36rpx;
	background: #38ca73;
	color: #fff;
	border-radius: 0;
	line-height: 100rpx;
}
button[disabled][type="default"], wx-button[disabled]:not([type]){
	background: #535356;
	color: #fff;
	border-radius: 0;
}